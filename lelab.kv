WidgetsExemple:

<WidgetsExemple>:
    cols: 3

    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        widht: "100dp"

    Button:
        text: "Compter"
        on_press: root.on_button_click()
        disabled: not root.conter_actived
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0.5, 1, 1

<PageLayoutExemple@PageLayout>:
    MainWidget:
    BoxLayoutExemple:
    AnchorLayoutExemple:
    GridLayoutExemple:
    StackLayoutExemple:
    ScrollViewExemple:


<ScrollViewExemple@ScrollView>:
    StackLayoutExemple:
        size_hint: 1, None
        height: self.minimum_height


<StackLayoutExemple>:
# "left_right, top_bottom"

    #orientation: "lr-bt"
    #padding: ("20dp", "20dp", "20dp", "20dp")
    #spacing: "20dp", "20dp"



<GridLayoutExemple@GridLayout>:
    # rows
    # cols
    cols: 3
    Button:
        text: "A"
        size_hint: None, 1
        widht: "60dp"
    BoxLayoutExemple:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        widht: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExemple>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"

    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"


<BoxLayoutExemple>:
    orientation: "horizontal"
    # spacing: "10dp"
    Button:
        text: "A"
        size_hint: .5, .5
        # size: '100dp', "60dp"
        # width: '100dp'
        # height: '60dp'
        # x, right, center_x
        # y, top, center_y
        pos_hint: { "top": 1}
    BoxLayout:
        spacing: "10dp"
        orientation: "vertical"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "60dp"
        pos: "200dp", "100dp"
        color: 0, 0, 1, 1
    Label:
        text: "Hello2"
        size: "100dp", "60dp"
        pos: "400dp", "100dp"
        color: 1, 0, 0, 1