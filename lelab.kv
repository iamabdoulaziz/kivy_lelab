<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text : "Layouts"
        on_press: app.manager.push("LayoutExemplesTabs")

    Button:
        text : "Widgets"
        on_press: app.manager.push("WidgetsExemple")

    Button:
        text : "Images"
        on_press: app.manager.push("ImagesExemple")
    Button:
        text : "Canvas"
        on_press: app.manager.push("CanvasExemple")

<MyScreenManager>:
    Screen:
        name: "MenuPrincipal"
        MenuPrincipal:
    Screen:
        name: "LayoutExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Layouts"
            LayoutExemplesTabs:
    Screen:
        name: "WidgetsExemple"
        BoxLayoutWithActionBar:
            title: "PageLayoutExemple"
            WidgetsExemple:
    Screen:
        name: "ImagesExemple"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExemple:
    Screen:
        name: "CanvasExemple"
        BoxLayoutWithActionBar:
            title: "Canvas"
