#: import box_layout_with_action_bar box_layout_with_action_bar

<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text : "Layouts"
        on_press: app.manager.push("PageLayoutExemple")

    Button:
        text : "Widgets"
        on_press: app.manager.push("WidgetsExemple")

    Button:
        text : "Images"
        on_press: app.manager.push("ImagesExemple")

<MyScreenManager>:
    Screen:
        name: "MenuPrincipal"
        MenuPrincipal:
    Screen:
        name: "PageLayoutExemple"
        BoxLayoutWithActionBar:
            title: "PageLayoutExemple"
            PageLayoutExemple:
    Screen:
        name: "WidgetsExemple"
        BoxLayoutWithActionBar:
            title: "PageLayoutExemple"
            WidgetsExemple:
    Screen:
        name: "ImagesExemple"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExemple: